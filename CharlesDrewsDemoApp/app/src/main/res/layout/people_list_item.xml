<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/people_list_item_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="@dimen/people_list_item_image_size"
            android:layout_height="@dimen/people_list_item_image_size"/>

        <TextView
            android:id="@+id/people_list_item_name"
            android:textSize="@dimen/people_list_item_name_size"
            android:textStyle="bold"
            android:layout_toRightOf="@id/people_list_item_image"
            android:layout_toEndOf="@id/people_list_item_image"
            android:layout_margin="@dimen/text_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/people_list_item_description"
            android:textSize="@dimen/people_list_item_description_size"
            android:layout_below="@id/people_list_item_name"
            android:layout_toRightOf="@id/people_list_item_image"
            android:layout_toEndOf="@id/people_list_item_image"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:layout_marginBottom="@dimen/text_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>