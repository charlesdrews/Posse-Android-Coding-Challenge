<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/platform_spinner"
        android:prompt="@string/platform_filter_title"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/filter_dialog_spinner_vertical_margin"
        android:layout_marginBottom="@dimen/filter_dialog_spinner_vertical_margin"
        android:layout_width="@dimen/filter_dialog_spinner_width"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/location_spinner"
        android:prompt="@string/location_filter_title"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/filter_dialog_spinner_vertical_margin"
        android:layout_width="@dimen/filter_dialog_spinner_width"
        android:layout_height="wrap_content"/>
</LinearLayout>